{
  "manifest_version": 2,

  "name": "INGing",
  "description": "This is extension to make dealing with Moje ING easier.",
  "version": "1.0",

  "content_scripts": [
      {
        "matches": ["https://login.ingbank.pl/mojeing/app/#transactions-history"],
        "js": ["history.js"]
      },
      {
        "matches": ["https://login.ingbank.pl/mojeing/app/*"],
        "js": ["login.js"]
      },
      {
        "matches": ["https://online.mbank.pl/pl*"],
        "js": ["mbank.js"]
      }
    ],

  "permissions": ["tabs", "http://*/*"]
}
